# Environment Configuration
EXECUTION_ENV=local  # local/container
SCRAPER_MODE=development

# Browser Settings
CHROME_BINARY_PATH=  # Leave empty for local, set for container
CHROME_DRIVER_PATH=  # Leave empty for local, set for container
HEADLESS_MODE=false  # true/false

# Simple Scraper Settings
MAX_RETRIES=3
CAPTCHA_WAIT_TIME=300
CAPTCHA_CHECK_INTERVAL=2
MAX_CAPTCHA_ATTEMPTS=2
WAIT_TIME=5
RANDOM_DELAY_MIN=3
RANDOM_DELAY_MAX=7

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG/INFO/WARNING/ERROR
LOG_FILE=logs/scraper.log

# Resource Management
MAX_MEMORY_PERCENT=80
MAX_CPU_PERCENT=70

# Input/Output Settings
CSV_OUTPUT_FILE=business_data.csv
INPUT_FILE=businesses.csv

# OCR Configuration
TESSERACT_PATH=C:\Program Files\Tesseract-OCR\tesseract.exe

# Cache Settings
CACHE_ENABLED=true
CACHE_DIR=.cache
CACHE_TYPE=memory
CACHE_TTL=3600

# Database Configuration (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=scraper_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_POOL_SIZE=5

# Metrics Configuration
ENABLE_METRICS=true
METRICS_PORT=8000

# Additional Scraper Settings
SCRAPER_THREADS=4
REQUEST_TIMEOUT=30
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# API Keys and External Services
LLAMA_MODEL_PATH=/path/to/your/llama/model 