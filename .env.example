# API Keys
QWANT_API_KEY=your_qwant_api_key_here

# LLaMA Model Settings
LLAMA_MODEL_PATH=path/to/your/llama/model

# Proxy Settings (comma-separated list)
PROXY_LIST=http://proxy1.example.com:8080,http://proxy2.example.com:8080

# Output Settings
CSV_OUTPUT_FILE=business_data.csv
INPUT_FILE=businesses.csv

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=scraper.log

# Cache Settings
HTTPCACHE_DIR=httpcache

# Tesseract OCR Path (Windows)
TESSERACT_PATH=C:\Program Files\Tesseract-OCR\tesseract.exe

# Scraping Settings
DOWNLOAD_DELAY=2
CONCURRENT_REQUESTS=1
ROBOTSTXT_OBEY=false

# Error Handling
MAX_RETRIES=3
RETRY_TIMES=3

# Database Settings (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=scraper_db
DB_USER=your_username
DB_PASSWORD=your_password 