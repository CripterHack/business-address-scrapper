# Test Environment Configuration
SCRAPER_MODE=testing
LOG_LEVEL=DEBUG
LOG_FILE=tests/scraper_test.log

# Mock API Keys (for testing)
LLAMA_MODEL_PATH=tests/fixtures/mock_llama_model

# Test Data Settings
CSV_OUTPUT_FILE=tests/output/test_data.csv
INPUT_FILE=tests/fixtures/test_businesses.csv

# Test OCR Configuration
TESSERACT_PATH=tests/fixtures/mock_tesseract

# Test Cache Settings
CACHE_ENABLED=true
CACHE_DIR=tests/.cache
CACHE_TYPE=memory
CACHE_TTL=60

# Test Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=scraper_test_db
DB_USER=test_user
DB_PASSWORD=test_password
DB_POOL_SIZE=2

# Mock Service URLs
MOCK_API_URL=http://localhost:8080
MOCK_PROXY_URL=http://localhost:8081

# Test Feature Flags
MOCK_RESPONSES=true
USE_TEST_PROXIES=true
SKIP_REAL_API_CALLS=true
ENABLE_METRICS=true
METRICS_PORT=8000

# Additional Test Settings
SCRAPER_THREADS=1
REQUEST_TIMEOUT=5
USER_AGENT=Mozilla/5.0 (Test User Agent)