# Sandbox Environment Configuration
SCRAPER_MODE=sandbox
LOG_LEVEL=DEBUG
LOG_FILE=sandbox/scraper_sandbox.log

# Sandbox API Keys
QWANT_API_KEY=sandbox_api_key
LLAMA_MODEL_PATH=sandbox/models/llama_sandbox

# Sandbox Data Settings
CSV_OUTPUT_FILE=sandbox/output/sandbox_data.csv
INPUT_FILE=sandbox/input/sandbox_businesses.csv

# Sandbox OCR Configuration
TESSERACT_PATH=sandbox/mock/tesseract

# Sandbox Cache Settings
CACHE_ENABLED=true
CACHE_DIR=sandbox/.cache
CACHE_TYPE=memory
CACHE_TTL=1800

# Sandbox Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=scraper_sandbox_db
DB_USER=sandbox_user
DB_PASSWORD=sandbox_password
DB_POOL_SIZE=3

# Sandbox Feature Flags
MOCK_RESPONSES_RATIO=0.5
USE_TEST_PROXIES=true
SIMULATE_ERRORS=true
ERROR_RATE=0.1

# Sandbox Limits
MAX_REQUESTS_PER_HOUR=100
MAX_ITEMS_TO_SCRAPE=1000
TIMEOUT_SECONDS=30
SCRAPER_THREADS=2
REQUEST_TIMEOUT=15

# Monitoring Settings
ENABLE_DETAILED_LOGGING=true
PROFILE_PERFORMANCE=true
SAVE_RESPONSES=true
ENABLE_METRICS=true
METRICS_PORT=8000

# Additional Sandbox Settings
USER_AGENT=Mozilla/5.0 (Sandbox User Agent) 